<div class="card border-secondary col-md-6 offset-md-3 text-white bg-dark ">
  <div class="card-header">
      <h2 style="font-family: Tahoma" class="text-center text-info">Employee List Application</h2></div>
  <div class="card-body">
    <h3 class="card-title">{{viewTitle}}</h3>
    <form autocomplete="off" action="/employee" method="post">
  <div class="form-row">
    <input type="hidden" name="_id" value="{{employee.id}}">
    
    <div class="form-group col-md-6">
      <label for="fullname">Full Name</label>
      <input placeholder="Full Name" class="form-control" type="text" name="fullname" id="" value="{{employee.fullname}}">
      {{employee.fullNameError}}
    </div>
    <div class="form-group col-md-6">
      <label for="email">Email</label>
      <input placeholder="Email" class="form-control" type="email" name="email" id="" value="{{employee.email}}">
      {{employee.emailError}}
    </div>
  </div>
  <div class="form-group">
    <label for="mobile">Mobile</label>
    <input placeholder="Mobile Number" class="form-control" type="tel" name="mobile" id="" value="{{employee.mobile}}">
  </div>
  <div class="form-group">
    <label for="address">Address</label>
    <input type="text" class="form-control" id="address" name="address" placeholder="Apartment, studio, or floor" value="{{employee.address}}">
  </div>
  <div class="form-row">
    <div class="form-group col-md-4">
      <label for="city">City</label>
        <input placeholder="City"  class="form-control" type="text" name="city" id="" value="{{employee.city}}">
    </div>
    <div class="form-group col-md-4">
      <label for="state">State</label>
      <input type="text" class="form-control" name="state" placeholder="State"id="" value="{{employee.state}}">
    </div>
    <div class="form-group col-md-4">
      <label for="gender">Gender</label>
      <select id="gender" name="gender" class="form-control" value="{{employee.gender}}">
        <option>Choose...</option>
        <option value="Male">Male</option>
        <option value="Female">Female</option>
      </select>
    </div>
    
  </div>
  <div class="form-group">
    
  </div>
  <button type="submit" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> {{btnText}}</button>
  <a class="btn btn-primary" href="/employee/list"><i class="fa fa-eye" aria-hidden="true"></i> View All Employees</a>
</form>
  </div>
</div>
