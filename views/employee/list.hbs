<div class="card border-secondary text-info col-md-10 offset-md-1 bg-dark ">
  <div class="card-header"><h2 style="font-family: Tahoma" class="text-center">List Of Employees</h2></div>
    <div class="card-body">
            <a class="btn btn-success" href="/employee"><i class="fa fa-plus" aria-hidden="true"></i>Add</a><br/><br/>

            <table class="table table-striped table-dark col-md-12 ">
            <thead>
                <tr>
                    <th scope="col">Full Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Mobile</th>
                    <th scope="col">Address</th>
                    <th scope="col">City</th>
                    <th scope="col">State</th>
                    <th scope="col">Gender</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {{#each list}}
                    <tr>
                        <td>{{this.fullname}}</td>
                        <td>{{this.email}}</td>
                        <td>{{this.mobile}}</td>
                        <td>{{this.address}}</td>
                        <td>{{this.city}}</td>
                        <td>{{this.state}}</td>
                        <td>{{this.gender}}</td>
                        <td>
                            <a class="btn btn-primary" href="/employee/{{this._id}}"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                            <a class="btn btn-danger" href="/employee/delete/{{this._id}}" onclick="return confirm('Are you sure you wan to delete this record?');"><i class="fa fa-trash" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
            </table>
        </div>
    </div>
</div>